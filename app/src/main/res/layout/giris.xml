<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center"
              android:background="@color/GirisBackground"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/think"
            android:layout_weight="2"
            android:padding="24dp"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/learning"
            android:layout_weight="1"
            android:padding="24dp"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/thinking"
            android:layout_weight="1"
            android:padding="24dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kullanıcı Adı"
            android:textStyle="bold"
            android:textColor="@color/yaziRengi"/>
        <EditText
            android:id="@+id/et_kullanici_adi_giris"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:hint="Lüften Kullanıcı Adı Giriniz..."
            android:textColorHint="@color/yaziRengi3"
            android:textColor="#F0F4C3"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Parola"

            android:textStyle="bold"
            android:textColor="@color/yaziRengi"/>
        <EditText
            android:id="@+id/et_kullanici_parola_giris"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Lüften Parolanızı Giriniz..."
            android:textColorHint="@color/yaziRengi3"
            android:textColor="#F0F4C3"
            android:padding="16dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_giris"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/giris"
            android:textColor="@color/yaziRengi2"
            android:textStyle="bold"
            />
        <Button
            android:id="@+id/btn_kaydol_girisPage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/uye_girisi"
            android:textStyle="bold"
            android:textColor="@color/yaziRengi2"/>
    </LinearLayout>





</LinearLayout>